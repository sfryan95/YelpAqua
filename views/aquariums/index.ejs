<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>
<div class="container"></div>
<h1>All Aquariums</h1>
<div>
  <a href="/aquariums/new">Add Aquarium</a>
</div>

<% for (let aquarium of aquariums) { %>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <% if(aquarium.images.length) { %>
        <img class="img-fluid" alt="" src="<%=aquarium.images[0].url%>" crossorigin="anonymous"/>
        <% } else {%>
        <img class="img-fluid" alt="" src="https://res.cloudinary.com/dy73d309d/image/upload/v1708709535/YelpAqua/ojfezoiufmojeiovd3fp.jpg" crossorigin="anonymous" />
        <% } %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= aquarium.title %></h5>
          <p class="card-text"><%= aquarium.description %></p>
          <p class="card-text">
            <small class="text-muted"><%= aquarium.location%></small>
          </p>
          <a class="btn btn-primary" href="/aquariums/<%=aquarium._id%>"
            >View</a
          >
        </div>
      </div>
    </div>
  </div>
  <% } %>
  </div>

  <script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const aquariums = { features: <%- JSON.stringify(aquariums) %>};
  
  </script>

<script src="/javascripts/clusterMap.js"></script>